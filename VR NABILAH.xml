<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VR NABILAH</title>
    <script src="https://aframe.io/releases/1.4.0/aframe.min.js"></script>
  </head>
  <body style="margin: 0; overflow: hidden;">
    <a-scene>
      <!-- Ground -->
      <a-plane position="0 0 -5" rotation="-90 0 0" width="20" height="20" color="#7BC8A4"></a-plane>

      <!-- Video -->
      <a-video src="batik.mp4" position="0 2 -3" width="4" height="2.25" rotation="0 0 0"></a-video>
      <a-text value="Video Display" position="0 3 -3" align="center" color="black"></a-text>

      <!-- Sphere -->
      <a-sphere position="2 1.5 -4" radius="1" color="#FF6347"></a-sphere>
      <a-text value="Red Sphere" position="2 2.7 -4" align="center" color="black"></a-text>

      <!-- Cube -->
      <a-box position="-2 1 -4" depth="1" height="1" width="1" color="#4CC3D9"></a-box>
      <a-text value="Blue Cube" position="-2 2 -4" align="center" color="black"></a-text>

      <!-- Sky -->
      <a-sky color="#ECECEC"></a-sky>

      <!-- Camera -->
      <a-entity camera wasd-controls look-controls>
        <a-entity 
          position="0 0 -0.5" 
          geometry="primitive: ring; radiusInner: 0.02; radiusOuter: 0.03" 
          material="color: black; shader: flat">
        </a-entity>
      </a-entity>
    </a-scene>
  </body>
</html>
